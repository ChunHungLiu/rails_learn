<div class="button_group span10 mg-auto">
	<div class="button_grup pull-right">
		<% if current_user && @page.editable_by?(current_user) %>
	    <%= link_to("Edit", edit_page_path(@page) , :class => "btn btn-info btn-large" )%>
	  <% end %>
	  <%= link_to("Back", pages_path , :class => "btn btn-large btn-success" )%>
  	</div>
</div>

<% if @page.title.blank? %>
	<h1 class="page_head_title text-center">沒有標題</h1>
<% else %>
	<h1 class="page_head_title text-center"><%= @page.title %></h1>
<% end %>

<p class="page_head_text text-center"><%= @page.intro %></p>


<!-- page的部分   -->
<div class="span6 mg-auto page_index_titles">
	<div class="thumb">
 		<div class="items">
 			 <%= render :partial => "pages/thumbnail", :locals => { :page => @page} %>
		</div>
	</div>
	<div class="attributes">
		<%= render_page_link_title(@page) %>
    <%= render :partial => "pages/description", :locals => { :page => @page} %>	
	</div>
</div>

<div class="span6 mg-auto"><hr></div>

<div id="show_page_messenge" class="span6 mg-auto">
	<h2 class="text-center page_show_titles">推薦原因</h2>
	<p class="page_text page_index_titles"><%= simple_format(@page.messenge) %></p>
</div>

<div class="span6 mg-auto"><hr></div>
<!-- end - page的部分   -->


<!-- disqus部分 -->

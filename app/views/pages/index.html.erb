<div class="hero-unit">
	<h1 class="text-center">Rails-Learn</h1>
	<p class="text-center">中文界 Ruby & Ruby on Rails 資訊交流中心 </p>
</div>

<div class="span8 offset2">
    
    <div class="group">
        <%= link_to("New Page", new_page_path , :class => "btn btn-large btn-primary pull-right" ) %>
    </div>
 
    <h3></h3>
    <table class="table">
        <thead>
            <tr>
                <td> 標題 </td>
                <td> 敘述 </td>
            </tr>
        </thead>

    <tbody>
        <% @pages.each do |page| %>
            <tr>
                <td> <%= link_to(page.title, page_path(page)) %> </td>
                <td> <%= page.description %> </td>
                <td> <%= link_to("Edit", edit_page_path(page), :class => "btn btn-mini pull-right" ) %><%= link_to("Delete", page_path(page), :class => "btn btn-mini pull-right", :method => :delete, :confirm => "Are you sure?" ) %></td>
            </tr>
        <% end %>
    </tbody>
    </table>

</div>